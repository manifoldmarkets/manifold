{
  "cli": {
    "version": ">= 2.3.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "NEXT_PUBLIC_FIREBASE_ENV": "DEV"
      },
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "credentialsSource": "remote",
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Debug"
      }
    },
    "preview": {
      "env": {
        "NEXT_PUBLIC_FIREBASE_ENV": "PROD"
      },
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "credentialsSource": "remote",
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "production": {}
  },
  "submit": {
    "production": {}
  }
}
