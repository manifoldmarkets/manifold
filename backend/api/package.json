{
  "name": "@manifold/api",
  "description": "Backend API endpoints for the Manifold website.",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "watch:compile": "npx concurrently \"tsc -b --watch --preserveWatchOutput\" \"(cd ../../common && tsc-alias --watch)\" \"(cd ../shared && tsc-alias --watch)\" \"tsc-alias --watch\"",
    "watch:serve": "nodemon -r tsconfig-paths/register --watch lib --ignore 'lib/**/*.map' lib/serve.js",
    "dev": "npx concurrently -n COMPILE,SERVER -c cyan,green \"yarn watch:compile\" \"yarn watch:serve\"",
    "build": "yarn compile && yarn dist:prepare && yarn dist:copy",
    "build:fast": "yarn compile && yarn dist:copy",
    "compile": "tsc -b && (cd ../../common && tsc-alias) && (cd ../shared && tsc-alias) && tsc-alias",
    "debug": "nodemon -r tsconfig-paths/register --watch src -e ts --watch ../../common/src --watch ../shared/src --exec \"yarn build:fast && node --inspect-brk lib/serve.js\"",
    "dist:prepare": "rm -rf dist && mkdir -p dist/common/lib dist/backend/shared/lib dist/backend/api/lib",
    "dist:copy": "rsync -a --delete ../../common/lib/ dist/common/lib && rsync -a --delete ../shared/lib/ dist/backend/shared/lib && rsync -a --delete ./lib/ dist/backend/api/lib && cp ../../yarn.lock dist && cp package.json dist",
    "verify": "yarn --cwd=../.. verify",
    "verify:dir": "npx eslint . --max-warnings 0",
    "regen-types": "yarn --cwd=../../common regen-types",
    "regen-types-dev": "yarn --cwd=../../common regen-types-dev"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "lib/serve.js",
  "dependencies": {
    "@amplitude/node": "1.10.2",
    "@anthropic-ai/sdk": "0.24.3",
    "@flat/in-app-purchase": "FlatIO/in-app-purchase#1.13.5",
    "@giphy/js-fetch-api": "5.0.0",
    "@google-cloud/monitoring": "4.0.0",
    "@google-cloud/secret-manager": "4.2.1",
    "@mendable/firecrawl-js": "1.8.5",
    "@supabase/supabase-js": "2.38.5",
    "@tiptap/core": "2.0.0-beta.204",
    "@tiptap/extension-image": "2.0.0-beta.204",
    "@tiptap/extension-link": "2.0.0-beta.204",
    "@tiptap/extension-mention": "2.0.0-beta.204",
    "@tiptap/html": "2.0.0-beta.204",
    "@tiptap/starter-kit": "2.0.0-beta.204",
    "@tiptap/suggestion": "2.0.0-beta.204",
    "colors": "1.4.0",
    "cors": "2.8.5",
    "dayjs": "1.11.4",
    "expo-server-sdk": "3.6.0",
    "express": "4.18.1",
    "firebase-admin": "11.11.1",
    "form-data": "4.0.0",
    "gcp-metadata": "6.1.0",
    "jsonwebtoken": "9.0.0",
    "libphonenumber-js": "1.11.3",
    "link-preview-js": "3.0.4",
    "lodash": "4.17.21",
    "mailgun-js": "0.22.0",
    "marked": "4.1.1",
    "openai": "4.77.0",
    "pg-promise": "11.10.0",
    "sharp": "0.32.6",
    "string-similarity": "4.0.4",
    "stripe": "8.194.0",
    "twilio": "5.0.1",
    "twitter-api-v2": "1.15.0",
    "ws": "8.17.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@types/mailgun-js": "0.22.12",
    "@types/marked": "4.0.7",
    "@types/twilio": "3.19.3",
    "@types/ws": "8.5.10"
  }
}
