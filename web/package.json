{
  "name": "web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "next dev -p 3000",
    "ts-watch": "tsc --watch --noEmit --incremental --preserveWatchOutput --pretty",
    "dev": "concurrently -n NEXT,TS -c magenta,cyan \"yarn serve\" \"yarn ts-watch\"",
    "devdev": "cross-env NEXT_PUBLIC_FIREBASE_ENV=DEV yarn dev",
    "dev:dev": "yarn devdev",
    "dev:prod": "cross-env NEXT_PUBLIC_FIREBASE_ENV=PROD yarn dev",
    "dev:the": "cross-env NEXT_PUBLIC_FIREBASE_ENV=THEOREMONE yarn dev",
    "dev:local": "cross-env NEXT_PUBLIC_FUNCTIONS_URL=http://localhost:8080 yarn devdev",
    "dev:emulate": "cross-env NEXT_PUBLIC_FIREBASE_EMULATE=TRUE yarn devdev",
    "disk-space-info": "du -hs ./node_modules && du -hs ./.next && du -hs ./.next/cache",
    "clear-nextjs-cache": "rm -rf ./.next/cache",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint-fix": "next lint --fix",
    "format": "npx prettier --write .",
    "format-changed": "cd .. && git diff $(git merge-base --fork-point main) --name-only --diff-filter=d | xargs npx prettier -w",
    "verify": "(cd .. && yarn verify)",
    "verify:dir": "npx prettier --check .; yarn lint --max-warnings 0; tsc --pretty --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "0.4.1",
    "@floating-ui/react": "0.19.0",
    "@headlessui/react": "1.7.7",
    "@hello-pangea/dnd": "16.0.0",
    "@heroicons/react": "1.0.6",
    "@react-query-firebase/firestore": "0.4.2",
    "@react-spring/web": "9.6.1",
    "@tiptap/core": "2.0.0-beta.204",
    "@tiptap/extension-character-count": "2.0.0-beta.204",
    "@tiptap/extension-image": "2.0.0-beta.204",
    "@tiptap/extension-link": "2.0.0-beta.204",
    "@tiptap/extension-mention": "2.0.0-beta.204",
    "@tiptap/extension-placeholder": "2.0.0-beta.204",
    "@tiptap/react": "2.0.0-beta.204",
    "@tiptap/starter-kit": "2.0.0-beta.204",
    "@tiptap/suggestion": "2.0.0-beta.204",
    "@use-gesture/react": "10.2.23",
    "@vercel/analytics": "0.1.1",
    "@vercel/og": "0.1.0",
    "algoliasearch": "4.13.0",
    "clsx": "1.1.1",
    "compressorjs": "1.1.1",
    "cors": "2.8.5",
    "d3-array": "3.2.0",
    "d3-axis": "3.0.0",
    "d3-brush": "3.0.0",
    "d3-scale": "4.0.2",
    "d3-selection": "3.0.0",
    "d3-shape": "3.1.0",
    "d3-timer": "3.0.1",
    "d3-transition": "3.0.1",
    "dayjs": "1.10.7",
    "firebase": "9.13.0",
    "gridjs": "5.1.0",
    "gridjs-react": "5.1.0",
    "lodash": "4.17.21",
    "nanoid": "^3.3.4",
    "next": "13.2.3",
    "plotly.js": "2.18.2",
    "prosemirror-state": "1.4.2",
    "rc-slider": "10.0.1",
    "react": "18.2.0",
    "react-confetti": "6.0.1",
    "react-countup": "6.3.2",
    "react-dom": "18.2.0",
    "react-expanding-textarea": "2.3.6",
    "react-hot-toast": "2.2.0",
    "react-masonry-css": "1.0.16",
    "react-plotly.js": "2.6.0",
    "react-query": "3.39.0",
    "react-tinder-card": "1.5.4",
    "react-twitter-embed": "4.0.4",
    "stability-client": "1.6.1",
    "string-similarity": "^4.0.4",
    "tippy.js": "6.3.7",
    "typewriter-effect": "2.19.0",
    "victory": "36.6.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.1",
    "@types/d3": "7.4.0",
    "@types/lodash": "4.14.178",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@types/string-similarity": "^4.0.0",
    "autoprefixer": "10.2.6",
    "cross-env": "^7.0.3",
    "csstype": "^3.1.0",
    "eslint-config-next": "13.0.0",
    "eslint-config-prettier": "8.5.0",
    "next-sitemap": "^2.5.14",
    "postcss": "8.3.5",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "prop-types": "^15.8.1",
    "tailwindcss": "3.2.4",
    "tsc-files": "1.1.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": "tsc-files --noEmit --incremental false"
  }
}
