{
    "compilerOptions": {
        "rootDir": "src",
        "composite": true,
        "target": "es2021",
        "module": "es2022",
        "lib": ["es2021"],
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "outDir": "./lib",
        "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
        "strict": true,
        "paths": {
            "common/*": ["../common/src/*", "../../common/lib/*"],
            "discord-bot/*": ["./src/*"]
        }
         },
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "esm": true
    },
    "references": [
        {
            "path": "../common"
        },
    ],
    "tsc-alias": {
        "resolveFullPaths": true
    },
    "compileOnSave": true,
    "include": ["src/**/*.ts"]
}
