{
  "compilerOptions": {
    "rootDir": "src",
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "lib",
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      "common/*": ["./src/*", "../lib/*"]
    }
  },
  "include": ["src/**/*.ts", "../web/lib/supabase/db.ts"]
}
